<div class="flex items-center justify-center min-h-screen relative">
  <div class="absolute top-0 left-0 m-4">
    <%= link_to "Relancio", root_path, class: "sm:order-1 flex-none text-xl font-semibold dark:text-white focus:outline-hidden focus:opacity-80" %>
  </div>
  <div class="w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-gray-900">Create an Account</h1>
    <p class="mt-2 text-center text-sm text-gray-600">Please fill in the details below to create your account.</p>
    <%= form_with model: @user, url: signup_path, class: "space-y-6 mt-6" do |form| %>
      <div class="flex space-x-4">
        <div class="w-1/2">
          <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :first_name, placeholder: "First name", class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div class="w-1/2">
          <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_name, placeholder: "Last name", class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :email, placeholder: "user@example.com", class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, placeholder: "********", class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, placeholder: "********" , class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.submit "Sign Up", class: "cursor-pointer w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <p class="text-sm text-gray-600">Already have an account? <%= link_to "Sign In", signin_path, class: "text-indigo-600 hover:text-indigo-500" %></p>
    </div>
  </div>
</div>
