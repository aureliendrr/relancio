<div class="flex items-center justify-center min-h-screen relative">
  <div class="absolute top-0 left-0 m-4">
    <%= link_to "Relancio", root_path, class: "sm:order-1 flex-none text-xl font-semibold dark:text-white focus:outline-hidden focus:opacity-80" %>
  </div>
  <div class="w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-gray-900">Login to your account</h1>
    <p class="mt-2 text-center text-sm text-gray-600">Please fill in the details below to login to your account.</p>
    <%= form_with url: signin_path, class: "space-y-6 mt-6" do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :email, placeholder: "user@example.come" , class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, placeholder: "********", class: "mt-1 p-2 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= form.submit "Sign In", class: "cursor-pointer w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <p class="text-sm text-gray-600">Don't have an account? <%= link_to "Sign Up", signup_path, class: "text-indigo-600 hover:text-indigo-500" %></p>
      <p class="text-sm text-gray-600">Forgot your password? <%= link_to "Reset it here", password_reset_path, class: "text-indigo-600 hover:text-indigo-500" %></p>
    </div>
  </div>
</div>
